{
  "name": "clean-ts-upload",
  "version": "0.0.1",
  "description": "API for uploading files using TypeScript, Clean Architecture, TDD and DDD",
  "license": "GPL-3.0-or-later",
  "author": {
    "name": "Alexandre Oliveira",
    "email": "alexandrevoliveira30@gmail.com",
    "url": "https://www.linkedin.com/in/alexandrevoliveira/"
  },
  "scripts": {
    "start": "node src/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm t -- --watch",
    "test:staged": "npm t -- --findRelatedTests",
    "test:coverage": "npm t -- --coverage",
    "test:coveralls": "npm run test:coverage && coveralls < coverage/lcov.info",
    "prepare": "husky install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "module-alias": "^2.2.2",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "eslint": "^8.27.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^13.0.3",
    "mockdate": "^3.0.5",
    "ts-jest": "^29.0.3",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": "16.x"
  }
}
